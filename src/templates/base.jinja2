<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <title>tg-plot {{ title }}</title>
  <meta name="description" content="" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="https://cdn.rawgit.com/Chalarangelo/mini.css/v3.0.1/dist/mini-default.min.css">
  <link rel="stylesheet" href="/static/style.css">
</head>

<body>

  <header>
    <a href="/" class="logo">{{ settings.app_name }}</a>
    <a href="{{ url_for('update_plot') }}" class="button">Update</a>
    <a href="{{ url_for('show_settings') }}" class="button">Settings</a>
    <a href="https://github.com/MikeWent/tg-plot" class="button">GitHub</a>
  </header>
  <main>
    <h1>{{ title }}</h1>
    {% block main %}
    {% endblock %}
  </main>

  {% with messages = get_flashed_messages(request) %}
  {% if messages %}
  <div class="flashes">
    {% for message in messages %}
    <p>
    <div class="toast ">
      <b>{{ message.category.value or message.category }} {{ ' ' + message.title if message.title }}</b><br>
      {{message.text or ''}}
    </div>
    </p>
    {% endfor %}
  </div>
  {% endif %}
  {% endwith %}
</body>

</html>